// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model activity {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    date        DateTime
    leader      String
    is_done     Boolean  @default(false)
    author      String   @default("HMTI")
    logo        String   @default("hmti-logo.png")
}

model document {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    date        DateTime @default(now())
    url         String
}

model suggestion {
    id          String   @id @default(auto()) @map("_id") @db.ObjectId
    title       String
    description String
    date        DateTime @default(now())
}
